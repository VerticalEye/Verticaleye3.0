<header class="container-fluid" id="header">
	<div class="container-sm row">
		<div class="logo-container col" id="head-logo">
			<%= link_to image_tag("logo-tricolore.webp", alt: "Verticaleye_logo"),
	            root_path %>
		</div>
		<div class="col" id="navbar">
			<nav id="pc-nav">
				<ul class="nav-list">
					<li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
					<li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
					<li class="<%= 'active' if current_page?(drone_path) %>"><%= link_to "Drone", drone_path %></li>
					<li class="<%= 'active' if current_page?(survey_path) %>"><%= link_to "Rilievi", survey_path %></li>
					<li class="<%= 'active' if current_page?(archeologia_path) %> invisible"><%= link_to "Archeologia", archeologia_path %></li>
					<li class="<%= 'active' if current_page?(print_path) %>"><%= link_to "Stampa 3D", print_path %></li>
					<li class="<%= 'active' if current_page?(portfolio_path) %>"><%= link_to "Portfolio", portfolio_path %></li>
					<li class="<%= 'active' if current_page?(contacts_path) %>"><%= link_to "Contatti", contacts_path %></li>
				</ul>	
			</nav>
			<nav id="mobile-nav">
        <div id="mySidenav" class="sidenav">
          <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
          <%= link_to "Home", root_path %>
         	<%= link_to "About", about_path %>
					<%= link_to "Drone", drone_path %>
					<%= link_to "Rilievi", survey_path %>
					<%= link_to "Archeologia", archeologia_path,  style:"display: none;" %>
					<%= link_to "Stampa 3D", print_path %>
					<%= link_to "Portfolio", portfolio_path %>
					<%= link_to "Contatti", contacts_path %>
        </div>

        <!-- Use any element to open the sidenav -->
        <i onclick="openNav()"class="material-icons" id="menu" style="cursor: pointer;">menu</i>  
      </nav>
		</div>

	</div>
</header>